{
    "name": "arachne/doctrine",
    "description": "Additional integrations of Doctrine to Kdyby and Arachne packages.",
    "type": "library",
    "keywords": [ "nette", "arachne", "symfony", "doctrine" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "nette/di": "^2.4.0"
    },
    "suggest": {
        "kdyby/validator": "Provides validation for doctrine entities.",
        "arachne/entity-loader": "Allows object parameters in application request.",
        "arachne/forms": "Integrates Symfony forms to Nette."
    },
    "require-dev": {
        "arachne/codeception": "^0.7.5",
        "arachne/entity-loader": "^0.11.0@beta",
        "arachne/event-manager": "^0.1.0",
        "arachne/forms": "^0.3.0",
        "arachne/service-collections": "^0.1.0",
        "codeception/codeception": "^2.3.2",
        "kdyby/console": "^2.4.0",
        "kdyby/doctrine": "^3.0.0",
        "kdyby/events": "^3.0.0",
        "kdyby/validator": "^0.4.0",
        "symfony/doctrine-bridge": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Doctrine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/integration/src",
            "Tests\\Functional\\": "tests/functional/src"
        }
    },
    "scripts": {
        "tools": "sh composer-tools.sh",
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    }
}
