{
	"require": {
		"php": ">=5.4.0",
		"arachne/di-helpers": "~0.3.1",
		"kdyby/doctrine": "~2.2",
		"nette/di": "~2.2.0"
	},
	"suggest": {
		"kdyby/validator": "Provides validation for doctrine entities.",
		"arachne/entity-loader": "Allows object parameters in application request.",
		"arachne/forms": "Integrates Symfony forms to Nette."
	},
	"require-dev": {
		"php": ">=5.5.0",
		"arachne/codeception": "~0.6.0",
		"arachne/coding-style": "~0.3.0",
        "arachne/entity-loader": "~0.7.1",
		"codeception/codeception": "~2.1",
		"codeception/mockery-module": "~0.2",
		"mockery/mockery": "~0.9",
		"nette/nette": "~2.2.0",
		"squizlabs/php_codesniffer": "~2.0"
	},
	"autoload": {
		"psr-4": {
			"Arachne\\Doctrine\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Unit\\": "tests/unit/src",
			"Tests\\Integration\\": "tests/integration/src"
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.m33.cz"
		}
	]
}
